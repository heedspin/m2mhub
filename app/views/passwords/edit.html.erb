<% title "Change Password for #{@user.full_name}"  %>
<%= semantic_form_for @user, :as => 'user', :url => user_password_path(@user) do |f| %>
  <%= f.inputs do %>
		<% unless permitted_to?(:update_without_current_password, :users_password) %>
    <%= f.input :current_password %>
		<% end %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>
  <%= f.actions do %>
    <%= f.cancel_link %>
    <%= f.action :submit %>
  <% end %>
<% end %>
