<% title "Forgot Password" %>

<p>Enter your email address below and instructions to reset your password will be emailed to you:</p>

<%= semantic_form_for @user, :as => 'user', :url => password_resets_path do |f| %>
  <%= f.inputs do %>
    <%= f.input :email, :required => true %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :label => "Send me a link to reset my password" %>
    <%= f.cancel_link %>
  <% end %>
<%# f.cancel_and_submit :submit_text => "Send me a link to reset my password", :cancel_url => login_path %>
<% end %> 
