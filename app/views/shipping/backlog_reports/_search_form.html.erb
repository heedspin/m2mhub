<%= semantic_form_for @report, :as => 'search', :url => shipping_backlog_reports_path, :html => {:method => :get} do |f| %>
	<%= f.inputs do %>
		<%= f.input :sales_order_numbers %>
	<% end %>
	<%= f.inputs :class => 'floatyfields' do %>
	 	<%= f.input :due_after, :as => :calendar, :label => 'Due After', :value => @report.due_after %>
	  <%= f.input :due_date, :as => :calendar, :label => 'Due By' %>
	<% end %>
	<%= f.inputs :class => 'floatyfields' do %>
		<%= f.input :customer_status_id, :as => :select, :collection => M2m::CustomerStatus.all %>
		<%= f.input :fob_group_id, :as => :select, :collection => FobGroup.all %>
	<% end %>
	<%= f.inputs :class => 'floatyfields' do %>
		<%= f.input :backlog_group_id, :as => :select, :collection => BacklogGroup.all %>
		<%= f.input :page_per_customer, :as => :boolean %>
		<%= f.input :include_open_jobs, :as => :boolean %>
	<% end %>
	<%= f.buttons :class => 'floatyfields buttons' do %>
	  <%= f.commit_button 'View' %>
		<%= f.commit_button 'Print' %>
	<% end %>
<% end %>

<%= set_focus('#search_due_date') %>
