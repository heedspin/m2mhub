<% title 'Edit Customer' %>

<%= render 'sales/opportunities/submenu' %>

<h2>Editing Sales Customer</h2>

<%= semantic_form_for @customer, :url => sales_customer_url(@customer) do |f| %>
  <%= f.semantic_errors %>
  <%= render :partial => "form", :locals => {:f => f} %>
  <%= f.actions do %>
    <%= f.action :submit %>
    <%= f.cancel_link %>
  <% end %>
<% end %>
