<%= render 'sales/submenu' %>
<br />

<div class="submenu">
	<ul>
		<% if permitted_to?(:read, :sales_reports) %>
		<li class="<%= menu_selected :browse_sales_reports %>">
			<%= link_to 'Browse Sales Reports', sales_reports_url %>
		</li>
		<% end %>

		<% if permitted_to?(:manage, :invoiced_sales_reports) %>
		<li class="<%= menu_selected :export_invoiced_sales %>">
			<%= link_to 'Export Invoiced Sales', new_invoiced_sales_report_url %>
		</li>
		<% end %>
	</ul>
</div>