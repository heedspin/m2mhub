<% title 'New Opportunity' %>

<%= render 'sales/opportunities/submenu' %>
<br />

<h2>
	Create New Opportunity
	<% if @opportunity.sales_customer %>
	For <%= @opportunity.sales_customer.name %>
	<% end %>
</h2>

<%= semantic_form_for @opportunity, :url => opportunities_url do |f| %>
  <%= render :partial => "form", :locals => {:f => f} %>
	<%= f.actions do %>
	  <%= f.action :submit, :label => 'Create' %>
	  <%= f.cancel_link :url => opportunities_url %>
	<% end %>
<% end %>

