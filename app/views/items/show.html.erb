<%= render 'summary' %>

<h3>Material Availability</h3>
<%= render 'items/history/show', :link_to_full => true %>

<h3>Purchase Orders:</h3>
<div id="purchase_order_items">
  <%= render 'items/purchase_order_items/list', :include_browse_all => true %>
</div>

<h3>Sales Orders</h3>
<div id="sales_order_releases">
  <%= render 'items/sales_order_releases/list' %>
</div>

<% if @quote_items.size > 0 %>
<h3>Quotes:</h3>
<div id="quote_items">
<%= render 'items/m2m_quote_items/list' %>
</div>
<% end %>

<h3>Commissions</h3>
<div id="commissions">
<%= render 'sales/commission_rates/list', :commission_rates => Sales::CommissionRate.matching_item(@item) %>
</div>
