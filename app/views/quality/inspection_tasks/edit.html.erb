<% title 'Edit Inspection Task' %>

<%= render 'quality/submenu' %>

<h2>Editing Inspection Task</h2>

<%= semantic_form_for @task, :url => inspection_task_url(@task) do |f| %>
  <%= render :partial => "form", :locals => {:f => f} %>
	<%= f.inputs do %>
		<%= f.input :delete_lighthouse_ticket, :as => :boolean, :wrapper_html => { :class => 'deletastic_param' }, :label => 'Delete Lighthouse Ticket' %>
	<% end %>

	<%= f.actions do %>
	  <%= f.action :submit, :label => 'Update Task' %>
	  <%= f.cancel_link %>
		<li class="deletastic_container">
			<%= link_to 'Delete', '#', :class => 'deletastic_delete_link' %>
			<div class="deletastic_confirmation">
				Are you sure?
				<%= link_to 'Delete', '#', :class => 'deletastic_boom' %>
				<br />
				<%= link_to 'Cancel', '#', :class => 'deletastic_delete_cancel_link' %>
			</div>
		</li>
	<% end %>

	<% if @task.lighthouse_ticket %>
	<div class="lighthouse_ticket_readonly">
	<%= render 'sales/opportunity_comments/show_ticket', :comment => @task %>
	</div>
	<% end %>
<% end %>
