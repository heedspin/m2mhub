<div>
  <h2>Login</h2>
	<% @user_session ||= UserSession.new %>
	<%#= error_messages_for :user_session %>
	<%= @user_session.errors['base']%>
  <%= semantic_form_for @user_session, :url => user_session_path do |f| %>
    <%= f.inputs do %>
      <%= f.input :email, :required => true %>
      <%= f.input :password, :required => true, :wrapper_html => { :class => 'string' } %>
      <%= f.input :remember_me, :as => :boolean, :required => false %>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, :label => "Login" %>
			<li class="link"><%= link_to "Forgot Password?", new_password_reset_url %></li>
    <% end %>
  <% end %>
</div>

<%= set_focus('#user_session_email') %>
