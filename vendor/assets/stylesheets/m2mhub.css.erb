/* buttons
---------------------------------------------*/

form.formtastic fieldset li.action input {
	display: inline-block;
	zoom: 1; /* zoom and *display = ie7 hack for display:inline-block */
	*display: inline;
	vertical-align: baseline;
	margin: 0 2px;
	outline: none;
	cursor: pointer;
	text-align: center;
	text-decoration: none;
	font-size:1.1em;
	padding: .5em 2em .55em;
	text-shadow: 0 1px 1px rgba(0,0,0,.3);
	-webkit-border-radius: .5em; 
	-moz-border-radius: .5em;
	border-radius: .5em;
	-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.2);
	-moz-box-shadow: 0 1px 2px rgba(0,0,0,.2);
	box-shadow: 0 1px 2px rgba(0,0,0,.2);
}
form.formtastic fieldset li.action input:hover {
	text-decoration: none;
}
form.formtastic fieldset li.action input:active {
	position: relative;
	top: 1px;
}
form.formtastic fieldset li.action input {
	color: #fff;
	border: solid 1px #13428E;
	background: #0066cc;
	background: -webkit-gradient(linear, left top, left bottom, from(#3F7AC9), to(#13428E));
	background: -moz-linear-gradient(top,  #3F7AC9,  #13428E);
	filter:  progid:DXImageTransform.Microsoft.gradient(startColorstr='#3F7AC9', endColorstr='#13428E');
}
form.formtastic fieldset li.action input:hover {
	background: #184196;
	background: -webkit-gradient(linear, left top, left bottom, from(#31599C), to(#122C62));
	background: -moz-linear-gradient(top,  #31599C,  #122C62);
	filter:  progid:DXImageTransform.Microsoft.gradient(startColorstr='#31599C', endColorstr='#122C62');
}
form.formtastic fieldset li.action input:active {
	color: #fff;
	background: -webkit-gradient(linear, left top, left bottom, from(#254077), to(#3F7AC9));
	background: -moz-linear-gradient(top,  #254077,  #3F7AC9);
	filter:  progid:DXImageTransform.Microsoft.gradient(startColorstr='#254077', endColorstr='#3F7AC9');
}

